{
  "name": "@gidw/event-emitter-js",
  "version": "0.2.1",
  "description": "JavaScript EventEmitter",
  "author": "Gilles De Waele",
  "license": "MIT",
  "type": "commonjs",
  "main": "./lib/event_emitter.cjs.js",
  "browser": "./umd/event_emitter.umd.js",
  "unpkg": "./umd/event_emitter.umd.js",
  "module": "./esm/event_emitter.esm.js",
  "types": "./lib/event_emitter.d.ts",
  "exports": {
    ".": {
      "require": "./lib/event_emitter.cjs.js",
      "default": "./esm/event_emitter.esm.js",
      "browser": "./umd/event_emitter.umd.js"
    }
  },
  "keywords": [
    "javascript",
    "node",
    "browser",
    "events",
    "event",
    "eventemitter"
  ],
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-typescript": "4.1.2",
    "@typescript-eslint/eslint-plugin": "3.0.0",
    "@typescript-eslint/parser": "3.0.0",
    "google-closure-compiler": "20200517.0.0",
    "mocha": "7.1.2",
    "rollup": "2.10.7",
    "rollup-plugin-terser": "5.3.0",
    "rollup-plugin-uglify": "6.0.4",
    "shelljs": "0.8.4",
    "standard": "14.3.4",
    "typescript": "3.9.3",
    "uglify-js": "3.9.3"
  },
  "repository": "github:GiDW/event-emitter-js.git",
  "bugs": {
    "url": "https://github.com/GiDW/event-emitter-js/issues",
    "email": "de.waele.gilles@gmail.com"
  },
  "scripts": {
    "lint": "standard ./src/**/*.{js,cjs,mjs,ts} ./test/**/*.{js,cjs,mjs,ts} ./test-esm/**/*.{js,cjs,mjs,ts}",
    "build": "npm run build-rollup && npm run build-types",
    "build-rollup": "rollup --config rollup.config.js",
    "build-types": "tsc --project tsconfig-typings.json",
    "build-legacy": "npm run build-legacy-uglify && npm run build-legacy-closure",
    "build-legacy-uglify": "uglifyjs legacy/index.js --compress --mangle -o legacy-dist/index.uglify.min.js",
    "build-legacy-closure": "google-closure-compiler --compilation_level ADVANCED --language_out ECMASCRIPT5_STRICT --formatting SINGLE_QUOTES --externs build/umd.extern.js --js_output_file legacy-dist/index.closure.min.js legacy/index.js",
    "clean": "rm -rf dist/*; rm -rf legacy-dist/*",
    "test": "node ./test/test-script.js",
    "test-legacy": "mocha ./test/test.js",
    "test-esm": "node --experimental-modules ./node_modules/.bin/mocha ./test-esm/test.js"
  },
  "standard": {
    "ignore": [
      "dist/**/*",
      "esm/**/*",
      "lib/**/*",
      "umd/**/*",
      "legacy-dist/**/*",
      "**/*.d.ts"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
